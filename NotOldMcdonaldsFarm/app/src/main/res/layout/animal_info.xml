<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.notoldmcdonaldsfarm">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="26dp"
            android:id="@+id/Cow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Animal Name"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewSongArtist"
            android:layout_width="40pt"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:text="Population:"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/AnimalPopulation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Animal Population"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewSongAlbum"
            android:layout_width="40pt"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:text="Lifespan:"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/textViewSongAlbumText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Animal Lifespan"
            android:padding="5dp"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewSong"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/cow"/>
</LinearLayout>
